<%- include('partials/_header') -%>

<body>

  <!-- Navigation -->
  <%- include('partials/_navigation') -%>

  <!-- Page Header -->
  <header class="masthead" style="background-image: url('img/home-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="site-heading">
            <h1>Clean Blog</h1>
            <span class="subheading">A Blog Theme by Start Bootstrap</span>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Main Content -->
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
        <% for(let i = 0; i < posts.length; i++) { %>
          <div class="post-preview">
            <a href="posts/<%= posts[i]._id %>">
              <h2 class="post-title">
                <%= posts[i].title %>
              </h2>
              <h3 class="post-subtitle">
                <%= posts[i].detail %>
              </h3>
            </a>
            <p class="post-meta">Posted by
              <a href="#"><%= posts[i].title %></a>
              on <%= posts[i].createdDate.toLocaleDateString('en-US') %>
            </p>
          </div>
          <hr>
        <% } %>
        <!-- Pager -->
        <div class="clearfix">
         <% if(pages > 0) { %>
          <ul class="nav tm-paging-links">
            <% for(i = 1; i <= pages; i++) { %>
              <% if(i == current) { %>
                <li><a href="/?page=<%= i %>" class="btn btn-primary mr-2" href="#"><%= i%></a></li>
              <% } else { %>
                <!-- <li><a href="/?page=<%= i %>" class="btn btn-primary mr-2" href="#">&rarr;</a></li> -->
                <li><a href="/?page=<%= i %>" class="btn btn-primary mr-2" href="#"><%= i%></a></li>
            <% } %>
            <% } %>
          </ul>
          <% } %>
        </div>
      </div>
    </div>
  </div>

  <hr>

  <!-- Footer -->
  <%- include('partials/_footer') -%>

</body>

</html>